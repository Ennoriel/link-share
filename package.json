{
	"private": true,
	"scripts": {
		"all": "pnpm prepare && pnpm build && pnpm package",
		"dev": "pnpm --filter site-share-link dev",
		"build": "pnpm -r build",
		"package": "pnpm -r package",
		"prepare": "pnpm -r prepare",
		"ci:publish": "pnpm -r publish",
		"lint": "pnpm -r lint",
		"prettier": "prettier --write ./**/* --no-error-on-unmatched-pattern --ignore-unknown",
		"changeset:version": "changeset version",
		"release": "pnpm i --lockfile-only && pnpm all && changeset publish"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.7",
		"@changesets/cli": "^2.24.3",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.7.0"
	}
}
