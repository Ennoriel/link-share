{
	"name": "toto",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"all": "pnpm prepare && pnpm package && pnpm build",
		"dev": "pnpm --filter site-share-link dev",
		"build": "pnpm -r build",
		"package": "pnpm -r package",
		"prepare": "pnpm -r prepare",
		"lint": "pnpm -r lint",
		"prettier": "prettier --write ./**/* --no-error-on-unmatched-pattern --ignore-unknown",
		"ci:version": "changeset version && pnpm update static-social-link --latest --filter site-social-link",
		"ci:publish": "changeset publish"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.0",
		"prettier": "^2.8.2",
		"prettier-plugin-svelte": "^2.9.0"
	}
}
